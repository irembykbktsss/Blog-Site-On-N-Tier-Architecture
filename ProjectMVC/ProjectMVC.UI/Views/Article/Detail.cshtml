    ViewData["Title"] = "Detail";
}




<h4>@Model.Title</h4> 
<hr />

<p><strong>Yazar:</strong>@Model.AppUser.FirstName @Model.AppUser.LastName </p>
<div class="row">
    <div class="col-md-12">

            <div class="form-group">
                <p><strong>Yayınlanma Tarihi:</strong> @Model.CreatedDate</p>
